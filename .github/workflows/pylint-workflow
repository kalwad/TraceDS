name: Pylint CI

on:
  push:  # Triggers the workflow on every push, regardless of the branch
  pull_request:  # Also triggers the workflow on pull requests targeting any branch

jobs:
  lint:
    name: Run Pylint
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: 3.10

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pylint

      - name: Run Pylint
        run: |
          pylint $(find . -type f -name "*.py")
